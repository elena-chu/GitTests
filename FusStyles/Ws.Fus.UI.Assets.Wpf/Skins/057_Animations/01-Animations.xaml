<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:extensions="http://schemas.insightec.com/wpf/">

  <Storyboard x:Key="XStoryboard.DoubleAnimation.PressedPercentage.RunUp">
    <DoubleAnimation Storyboard.TargetProperty="(extensions:ControlExtensions.PressedPercentage)" To="1.0" Duration="{StaticResource XDuration.Animation.Short}"/>
  </Storyboard>

  <Storyboard x:Key="XStoryboard.DoubleAnimation.PressedPercentage.RunDown">
    <DoubleAnimation Storyboard.TargetProperty="(extensions:ControlExtensions.PressedPercentage)" To="0.0" Duration="{StaticResource XDuration.Animation.Short}"/>
  </Storyboard>

  <Storyboard x:Key="XStoryboard.DoubleAnimation.HoverPercentage.RunUp">
    <DoubleAnimation Storyboard.TargetProperty="(extensions:ControlExtensions.HoverPercentage)" To="1.0" Duration="{StaticResource XDuration.Animation.Short}"/>
  </Storyboard>

  <Storyboard x:Key="XStoryboard.DoubleAnimation.HoverPercentage.RunDown">
    <DoubleAnimation Storyboard.TargetProperty="(extensions:ControlExtensions.HoverPercentage)" To="0.0" Duration="{StaticResource XDuration.Animation.Short}"/>
  </Storyboard>

</ResourceDictionary>